*{font-family:times new roman,Times,serif}body{margin:0;padding:0}header{max-width:1000px;position:relative;left:50%;transform:translate(-50%)}header nav{padding:1% 10%;border-bottom:1px lightgrey solid}header nav ul{margin:0;padding:0;list-style:none;display:flex}header nav ul li{margin-left:48px;font-size:24px}header nav ul li a{text-decoration:none}header #title{padding:2% 10%;margin:0;font-size:36px;font-weight:400}footer{max-width:1000px;position:relative;left:50%;transform:translate(-50%)}main{margin-top:2rem;position:absolute;width:800px;left:50%;transform:translate(-50%);line-height:2rem}main .page-title{font-size:2rem;font-weight:700;border-bottom:1px solid lightgrey}main .page-title::first-letter{color:red}main .page-properties{width:fit-content;margin-left:auto;color:grey}a{color:#000}a:visited{color:inherit}a:hover{color:lightgrey}p{margin-top:8px}h2{width:fit-content;border-bottom:1px solid lightgrey;margin:0}h3{width:fit-content;border-bottom:1px solid lightgrey;margin:0}img{position:relative;left:50%;transform:translateX(-50%)}